@using HairSalon.Models;

<!--Nav Tabs-->
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/">Stylists</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/specialty">Specialties</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/client">Clients</a>
  </li>
</ul>
<br><br>


<div class="row">
  <div class="col-md-4" id="sidebar">
    <h3>Update Stylist Name</h3>
    <form action="/stylist/@Model.Id/update" method="post">
      <div class="form-group">
        <label for="newName">Name</label>
        <input class="form-control" name="newName" type="text" value="@Model.Name">
      </div>
      <button type="submit" class="btn btn-warning">Update</button>
    </form>
  </div>
  <div class="col-md-8" id="content">
    <h1>@Model.Name</h1>
    <hr>
    <div class="specialties">
      <h4>Specialties</h4>
      <ul>
        @foreach (var specialty in @Model.GetSpecialties())
        {
          <li>@specialty.Name
             | <a href='/stylist/@Model.Id/remove/@specialty.Id' class='delete'>Delete</a></li>
        }
    </div>
    <form action="/stylist/@Model.Id/update/specialty" method="post">
      <div class="form-group">
        <label for="specialty">Add Specialty</label>
        <select name="specialty">
          @foreach (var specialty in @Specialty.GetAll())
          {
            <option value="@specialty.Id">@specialty.Name</option>
          }
        </select>
      <button type="submit" class="btn btn-warning">Update</button>
    </form>
  </div>
  <a class='btn btn-primary' href="/">Back to Stylists</a>

</div>
