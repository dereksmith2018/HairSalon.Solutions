@using HairSalon.Models;

<div class='container'>
  <h1>Specialties</h1>
  <hr/>

 
  @if (@Model.Count == 0)
  {
    <h4>No Specialties have been added yet!</h4>
  }
  @foreach (var specialist in Model)
  {
    <h3><a href='/specialist/@specialist.GetSpecialistId()'>@specialist.GetSpecialist()</a></h3>
  }
  
  <a href = '/specialist/new'><button class='btn btn-success'>Add a specialty to a stylist</button></a>
  <a href='/stylist'><button class='btn btn-warning'>Click to see Stylists</button></a>
  <a href = '/client'><button class='btn btn-warning'>Click to see Clients</button></a>
  <a href='/'><button class='btn btn-success'>Home</button></a>
</div>
